/* CSS para la animación de las ondas */
.audio-waves-icon {
    display: flex;
    justify-content: space-between;
    width: 75%;
    height: 75%;
    max-width: 50px;
    max-height: 50px;
    align-items: center;
    /* border: 1px solid red; */
}

.wave, .wave2, .wave3 {
    width: 3px;
    height: 20px;
    background: #333;
    margin: 2px;
  }
  
  .wave {
    height: 15px;
        animation: wave 1s infinite;
  }

  .wave2 {
    height: 15px;
        animation: wave2 1s infinite;
  }
  
  .wave3 {
    height: 10px;
        animation: wave3 1s infinite;
  }
  
  .playing .wave, 
  .playing .wave2, 
  .playing .wave3 {
    animation-play-state: running; /* Animación en marcha */
  }
  
  .wave:not(.playing), 
  .wave2:not(.playing), 
  .wave3:not(.playing) {
    animation-play-state: paused; /* Animación en pausa */
  }
  
  .wave {
    animation: wave 1s infinite ease-in-out;
}
    .wave2 {
    animation: wave2 1.2s infinite ease-in-out;
}
    .wave3 {
    animation: wave3 1.1s infinite ease-in-out;
}

@keyframes wave {
    0%, 100% {
        height: 30%;
    }
    50% {
        height: 60%;
    }
}

@keyframes wave2 {
    0%, 100% {
        height: 40%;
    }
    50% {
        height: 80%;
    }
}

@keyframes wave3 {
    0%, 100% {
        height: 50%;
    }
    50% {
        height: 85%;
    }
}
  
  /* Estilo para el reproductor expandido */
  .music-player {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    bottom: 0;
    right: 0;
    width: 50px;
    height: 50px;
    cursor: pointer;
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 50px;
    transition: all 0.5s ease-in-out;
    border: 1px solid white;
    margin: 1rem;
  }
  
  .music-player.expanded {
    width: 300px;
    height: 150px;
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 5px;
    border-top-left-radius: 20px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.5s ease-in-out;
  }
  
  /* Estilo para el ícono de minimizar */
  .minimize-icon {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    top: -27px;
    right: 0px;
    width: 20px;
    height: 20px;
    background-color: rgba(0, 0, 0, 0.8);
    border: 1px solid white;
    color: white;
    border-radius: 50px;
    padding: 5px;
    cursor: pointer;
    /* border: 1px solid red; */
        transition: all 0.5s ease-in-out;
  }
  
  .minimize-icon:hover {
    background-color: rgba(34, 34, 34, 0.8);
  }
  
  .cover {
    width: 70px;
    height: 70px;
    margin-right: 10px;
    object-fit: cover;
        transition: all 0.5s ease-in-out;
  }

  /* Estilos adicionales */
  .player-controls {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    /* border: 1px solid red; */
  }
  
  .controls {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-top: 10px;
  }

  .controls svg {
    /* color: red; */
  }
  
  .song-info {
    display: flex;
    align-items: center;
    width: 100%;
    margin-bottom: 0px;
    color: white;
  }
  
  input[type="range"] {
    width: 100%;
    margin-top: 0px;
  }

  .time-info {
    display: flex;
    justify-content: space-between;
    width: 97%;
    color: white;
    font-size: 0.7rem;
  }
  
  .volume-control {
    position: relative;
    display: flex;
    align-items: center;
}

.volume-control input[type="range"] {
    position: absolute;
    top: 22px;
    right: -11px;
    width: 110px;
    background-color: red;
    /* opacity: 0.7; */
    opacity: 1;
}

.volume-display {
    position: absolute;
    top: 115px;
    right: 60px;
    background: #333;
    color: white;
    padding: 2px 5px;
    border-radius: 3px;
    font-size: 10px;
    pointer-events: none;
    z-index: 999;
    transition: all 0.9s ease;
}
  
  .volume-control:hover .volume-display {
    display: block;
  }
  
  